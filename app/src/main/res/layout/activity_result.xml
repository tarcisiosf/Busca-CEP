<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tv_titulo_resultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resultado da Busca"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_logradouro_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logradouro:"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_resultado"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_logradouro_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_resultado"
        app:layout_constraintStart_toEndOf="@id/tv_logradouro_label"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_bairro_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bairro:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_logradouro_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_bairro_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_logradouro_valor"
        app:layout_constraintStart_toEndOf="@id/tv_bairro_label"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_cidade_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bairro_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cidade_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bairro_valor"
        app:layout_constraintStart_toEndOf="@id/tv_cidade_label"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_estado_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cidade_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_estado_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="--"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cidade_valor"
        app:layout_constraintStart_toEndOf="@id/tv_estado_label"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_salvar_historico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar no Histórico"
        android:layout_marginTop="32dp"
        android:backgroundTint="#960F0F"
        app:layout_constraintTop_toBottomOf="@id/tv_estado_valor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_ver_historico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Histórico"
        android:layout_marginTop="16dp"
        android:backgroundTint="#960F0F"
        app:layout_constraintTop_toBottomOf="@id/btn_salvar_historico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>